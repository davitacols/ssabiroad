generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bookmark {
  id        String    @id
  createdAt DateTime  @default(now())
  title     String?
  updatedAt DateTime?
  url       String?
  userId    String?
  User      User?     @relation(fields: [userId], references: [id])
}

model Geofence {
  id            String    @id
  name          String
  latitude      Float
  longitude     Float
  radius        Float
  userId        String
  notifyOnEnter Boolean   @default(true)
  notifyOnExit  Boolean   @default(true)
  active        Boolean   @default(true)
  lastStatus    String?
  lastTriggered DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime

  @@index([active])
  @@index([userId])
}

model Job {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  userId      String?
  company     String?
  description String?
  location    String?
  remote      Boolean  @default(false)
  salary      String?
  title       String?
  type        String?
  User        User?    @relation(fields: [userId], references: [id])
}

model Location {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  latitude    Float
  longitude   Float
  name        String
  address     String
  userId      String?
  description String?
  bikeScore   Int?
  walkScore   Int?
  User        User?    @relation(fields: [userId], references: [id])
}

model User {
  id        String     @id
  email     String     @unique
  name      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime
  bio       String?
  Bookmark  Bookmark[]
  Job       Job[]
  Location  Location[]
}

model known_locations {
  id                String   @id
  businessName      String
  address           String
  latitude          Float
  longitude         Float
  phoneNumber       String?
  visualFeatures    Json?
  franchiseId       String?
  verificationCount Int      @default(1)
  lastVerified      DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime

  @@unique([businessName, latitude, longitude])
  @@index([businessName])
  @@index([franchiseId])
}

model location_cache {
  id        String   @id
  query     String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model location_corrections {
  id                 String   @id
  latitude           Float
  longitude          Float
  correctAddress     String
  createdAt          DateTime @default(now())
  imageFeatures      String?
  originalAddress    String
  originalConfidence Float?
  originalMethod     String?
}

model location_feedback {
  id                    String                @id
  recognitionId         String                @unique
  wasCorrect            Boolean
  correctAddress        String?
  correctLat            Float?
  correctLng            Float?
  userId                String?
  createdAt             DateTime              @default(now())
  location_recognitions location_recognitions @relation(fields: [recognitionId], references: [id], onDelete: Cascade)

  @@index([wasCorrect])
}

model location_recognitions {
  id                String             @id
  businessName      String?
  detectedAddress   String?
  latitude          Float
  longitude         Float
  confidence        Float
  method            String
  imageHash         String?
  userId            String?
  createdAt         DateTime           @default(now())
  location_feedback location_feedback?

  @@index([imageHash])
  @@index([method])
}

model region_optimizations {
  id          String   @id
  region      String
  countryCode String
  priority    Int      @default(0)
  searchHints Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@unique([region, countryCode])
  @@index([countryCode])
}

model Story {
  id        String   @id
  userId    String
  location  String
  address   String
  image     String
  isPublic  Boolean  @default(true)
  views     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([userId])
  @@index([createdAt])
  @@index([isPublic])
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bookmark {
  id        String    @id
  createdAt DateTime  @default(now())
  title     String?
  updatedAt DateTime?
  url       String?
  userId    String?
  User      User?     @relation(fields: [userId], references: [id])
}

model Geofence {
  id            String    @id
  name          String
  latitude      Float
  longitude     Float
  radius        Float
  userId        String
  notifyOnEnter Boolean   @default(true)
  notifyOnExit  Boolean   @default(true)
  active        Boolean   @default(true)
  lastStatus    String?
  lastTriggered DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime

  @@index([active])
  @@index([userId])
}

model Job {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  userId      String?
  company     String?
  description String?
  location    String?
  remote      Boolean  @default(false)
  salary      String?
  title       String?
  type        String?
  User        User?    @relation(fields: [userId], references: [id])
}

model Location {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  latitude    Float
  longitude   Float
  name        String
  address     String
  userId      String?
  description String?
  bikeScore   Int?
  walkScore   Int?
  User        User?    @relation(fields: [userId], references: [id])
}

model User {
  id                   String        @id
  email                String        @unique
  name                 String?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime
  bio                  String?
  avatar               String?
  badges               String[]      @default([])
  contributionCount    Int           @default(0)
  emailNotifications   Boolean       @default(true)
  gamificationPoints   Int           @default(0)
  lastContributionDate DateTime?
  lastEmailSent        DateTime?
  streak               Int           @default(0)
  ApiKey               ApiKey[]
  BlogComment          BlogComment[]
  BlogPost             BlogPost[]
  Bookmark             Bookmark[]
  Job                  Job[]
  Location             Location[]

  @@index([gamificationPoints])
}

model ApiKey {
  id        String    @id @default(cuid())
  name      String
  key       String    @unique
  userId    String
  requests  Int       @default(0)
  limit     Int       @default(10000)
  lastUsed  DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([key])
  @@index([userId])
}

model known_locations {
  id                String   @id
  businessName      String
  address           String
  latitude          Float
  longitude         Float
  phoneNumber       String?
  visualFeatures    Json?
  franchiseId       String?
  verificationCount Int      @default(1)
  lastVerified      DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime

  @@unique([businessName, latitude, longitude])
  @@index([businessName])
  @@index([franchiseId])
}

model location_cache {
  id        String   @id
  query     String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model location_corrections {
  id                 String   @id
  latitude           Float
  longitude          Float
  correctAddress     String
  createdAt          DateTime @default(now())
  imageFeatures      String?
  originalAddress    String
  originalConfidence Float?
  originalMethod     String?
}

model location_feedback {
  id                    String                @id
  recognitionId         String                @unique
  wasCorrect            Boolean
  correctAddress        String?
  correctLat            Float?
  correctLng            Float?
  userId                String?
  createdAt             DateTime              @default(now())
  location_recognitions location_recognitions @relation(fields: [recognitionId], references: [id], onDelete: Cascade)

  @@index([wasCorrect])
}

model location_recognitions {
  id                String             @id
  businessName      String?
  detectedAddress   String?
  latitude          Float
  longitude         Float
  confidence        Float
  method            String
  imageHash         String?
  imageUrl          String?
  userId            String?
  createdAt         DateTime           @default(now())
  location_feedback location_feedback?

  @@index([imageHash])
  @@index([method])
}

model region_optimizations {
  id          String   @id
  region      String
  countryCode String
  priority    Int      @default(0)
  searchHints Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@unique([region, countryCode])
  @@index([countryCode])
}

model Story {
  id        String   @id
  userId    String
  location  String
  address   String
  image     String
  isPublic  Boolean  @default(true)
  views     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([userId])
  @@index([createdAt])
  @@index([isPublic])
}

model CrimeReport {
  id          String   @id
  description String
  contactInfo String?
  isAnonymous Boolean  @default(false)
  fileUrls    Json
  location    Json?
  status      String   @default("PENDING")
  reporterIp  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model BlogPost {
  id         String        @id @default(cuid())
  title      String
  slug       String        @unique
  excerpt    String
  content    String
  coverImage String?
  category   String
  authorId   String
  published  Boolean       @default(false)
  views      Int           @default(0)
  likes      Int           @default(0)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  comments   BlogComment[]
  postLikes  BlogLike[]
  author     User          @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([slug])
  @@index([published])
  @@index([authorId])
}

model BlogComment {
  id           String        @id @default(cuid())
  content      String
  authorId     String
  postId       String
  parentId     String?
  likes        Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  author       User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parent       BlogComment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies      BlogComment[] @relation("CommentReplies")
  post         BlogPost      @relation(fields: [postId], references: [id], onDelete: Cascade)
  commentLikes CommentLike[]

  @@index([postId])
  @@index([authorId])
  @@index([parentId])
}

model BlogLike {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([postId])
}

model CommentLike {
  id        String      @id @default(cuid())
  userId    String
  commentId String
  createdAt DateTime    @default(now())
  comment   BlogComment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@index([commentId])
}

model TrainingQueue {
  id          String    @id @default(cuid())
  imageUrl    String
  address     String
  latitude    Float
  longitude   Float
  deviceId    String
  status      String    @default("PENDING")
  processedAt DateTime?
  error       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
  @@index([deviceId])
  @@index([createdAt])
}

model NavisenseTraining {
  id            String    @id @default(cuid())
  imageUrl      String
  imageHash     String    @unique
  latitude      Decimal   @db.Decimal(10, 8)
  longitude     Decimal   @db.Decimal(11, 8)
  address       String?
  businessName  String?
  verified      Boolean   @default(false)
  userCorrected Boolean   @default(false)
  confidence    Float?
  userId        String?
  createdAt     DateTime  @default(now())
  trainedAt     DateTime?
  
  @@index([verified])
  @@index([trainedAt])
  @@index([userCorrected])
}

# SSABIRoad ML Models - Environment Configuration

# Device Configuration
DEVICE=cpu  # Use 'cuda' for GPU instances

# Model Settings
SIMILARITY_THRESHOLD=0.75
CONFIDENCE_THRESHOLD=0.6

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Paths
MODELS_DIR=models
FAISS_INDEX_DIR=faiss_index
DATA_DIR=data
LOGS_DIR=logs

# Active Learning
AUTO_RETRAIN=true
MIN_SAMPLES_FOR_TRAINING=100
MIN_CORRECTIONS_FOR_TRAINING=20

# Monitoring
ENABLE_MONITORING=true
METRICS_WINDOW_HOURS=24
